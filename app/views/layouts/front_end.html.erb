<!DOCTYPE html>
<html>
	<head>
		<title>ClickInmobiliario</title>
		<meta http-equiv="Content-type" content="text/html;charset=UTF-8">
		
		<%= stylesheet_link_tag :default %> 
		<!--[if lte IE 6]><%= stylesheet_link_tag :ie6 %><![endif]-->
		<%= yield :stylesheets %>
		
		<%= javascript_include_tag :default %> 
		<!--[if lte IE 8]><%= javascript_include_tag :ie_html5 %><![endif]-->		
		<%= yield :javascripts %>
		<%= csrf_meta_tag %>
		
		<!-- For Gmaps4Rails -->
		<%= yield :head %>
		
		<link rel="icon" type="image/png" href="<%= url_for('/images/favicon.png') %>"/>
	</head>
	
	<body>
		<div class="topbar">
			<div class="fill">
				<div class="container">
					
					<%= render_navigation :context => :admin, :expand_all => true, :skip_if_empty => true %>
					<div class="account_links pull-right">
						<div class="gravatar">
							
						</div>
						<%= render_navigation %>
					</div>
				</div>
			</div>
		</div>
		<div class="main container">
			<div id="flash-messages">
				
			</div>
			<section id="content">
				<%= yield %>
			</section>
		</div>
		<%= render :partial => "layouts/footer" %>
	</body>
	
	<!-- For Gmaps4Rails -->
	<%= yield :scripts %>

</html>
