    </div>
    <div id="operations">
      <%= render "admin/operations/tab", :operations => @operations %>
    </div>
    <div id="properties">
      <%= render "admin/properties/tab", :properties => @properties %>
    </div>
    <div id="real-estates">
      <%= render "admin/real_estates/tab", :real_estates => @real_estates %>
    </div>
    <div id="types">
