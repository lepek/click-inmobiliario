<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @currencies.each do |currency| %>
  <tr>
    <td><%= currency.name %></td>
    <td><%= currency.code %></td>
    <td><%= link_to 'Show', [:admin, currency] %></td>
    <td><%= link_to 'Edit', edit_admin_currency_path(currency) %></td>
    <td><%= link_to 'Destroy', [:admin, currency], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

