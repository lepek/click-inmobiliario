<fieldset class="gray">
  <%= button_to "Agregar una nueva operación", new_admin_operation_path, :method => "get" %>
</fieldset>
<% datatable "operations-table", ["Operación", ""], :class => "selectable" do -%>
  <% operations.each do |operation| -%>
    <tr>
      <td><%= operation.name %></td>
      <td>
        <%= button_to "Editar", edit_admin_operation_path(operation), :method => :get %>
        <%= button_to "Borrar", {:action=>"destroy", :controller=>"admin/operations", :id => operation}, :confirm => "¿Está seguro que desea eliminar \nla operación #{operation.name.upcase}?", :method => :delete %>
      </td>
    </tr>
  <% end -%>
<% end -%>
