<fieldset class="gray">
  <%= button_to "Agregar un nuevo punto de interés", new_admin_poi_path, :method => "get" %>
</fieldset>
<% datatable "pois-table", ["Descripción", "Dirección", "Localidad","Tipo", ""], :class => "selectable" do -%>
  <% pois.each do |poi| -%>
    <tr>
      <td><%= poi.description %></td>
      <td><%= poi.address %></td>
      <td><%= poi.location.name %></td>
      <td><%= poi.poi_type.name %></td>
      <td>
        <%= button_to "Editar", edit_admin_poi_path(poi), :method => :get %>
        <%= button_to "Borrar", {:action=>"destroy", :controller=>"admin/pois", :id => poi}, :confirm => "¿Está seguro que desea eliminar \nel punto de interés ubicado en #{poi.address.upcase}?", :method => :delete %>
      </td>
    </tr>
  <% end -%>
<% end -%>
