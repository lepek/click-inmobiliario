<fieldset class="gray">
  <%= button_to "Agregar una nueva localidad", new_admin_location_path, :method => "get" %>
</fieldset>
<% datatable "locations-table", ["Localidad", ""], :class => "selectable" do -%>
  <% locations.each do |location| -%>
    <tr>
      <td><%= location.name %></td>
      <td><%= button_to "Edit", edit_admin_location_path(location), :method => :get %></td>
    </tr>
  <% end -%>
<% end -%>
