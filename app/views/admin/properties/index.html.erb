<h1>Listing properties</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Code</th>
    <th>Price</th>
    <th>Address</th>
    <th>Location</th>
    <th>Type</th>
    <th>Currency</th>
    <th>Operation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @properties.each do |property| %>
  <tr>
    <td><%= property.description %></td>
    <td><%= property.code %></td>
    <td><%= property.price %></td>
    <td><%= property.address %></td>
    <td><%= property.location_id %></td>
    <td><%= property.type_id %></td>
    <td><%= property.currency_id %></td>
    <td><%= property.operation_id %></td>
    <td><%= link_to 'Show', property %></td>
    <td><%= link_to 'Edit', edit_property_path(property) %></td>
    <td><%= link_to 'Destroy', property, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

