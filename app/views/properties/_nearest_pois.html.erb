<% unless nearest_pois.empty? %>

<div id="nearest_pois">
	<h3>Puntos de Inter&eacute;s m&aacute;s cercanos:</h3>
	<ul>
		<% nearest_pois.each do |poi_type, nearest_poi| %>
			<%= content_tag(:li, "<span class='poi' title='#{nearest_poi[:poi].full_address}'>#{nearest_poi[:poi].description}</span> a #{nearest_poi['text']}".html_safe, :style => "background-image: url('#{nearest_poi[:poi].poi_type.icon.url}')") %>
		<% end %>
	</ul>
</div>

<% end %>