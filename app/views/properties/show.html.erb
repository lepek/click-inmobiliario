<% content_for :javascripts do %>
  <%= javascript_include_tag 'galleria/galleria-1.2.6.min.js' %>
<% end %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag :property %>
<% end %>

<div id="content-inner">
    <div id="title"><h1><%= @property.address %>, <%= @property.location.name %></h1></div>

  <div id="gallery">
        <% @property.photos.each do |photo| %>
            <%= image_tag photo.file.url %>
        <% end %>
	</div>
	
	<div id="property">
        <h2><%= @property.type.name %> en <%= @property.operation.name %></h2>
        <div><h2>C&oacute;digo: <%= @property.code %></h2></div>
        <div><h2>Precio: $<%= @property.price %></h2></div>
		<h5><%= @property.description %></h5>
	</div>
</div>

<script>
    Galleria.loadTheme('<%= javascript_path 'galleria/themes/classic/galleria.classic.js' %>');
    $("#gallery").galleria({
        width: 500,
        height: 500
    });
</script>