/* Begin column layouts */
/* Adapted from http://matthewjamestaylor.com/blog/perfect-2-column-double-page.htm */

.column-container {
  clear: both;
  width: 100%;
  overflow: hidden; /* This chops off any overhanging divs */
}

.column-right,
.column-center,
.column-left {
  float: left;
  width: 100%;
  position: relative;
}

.column-1,
.column-2,
.column-3 {
  float: left;
  position: relative;
  padding: 0 0 1em 0;
  overflow: hidden;
}

.double-page .column-left {
  right: 50%; /* right column width offset */
}

.double-page .column-1 {
  left: 50%;
  width: 49%;
}

.double-page .column-2 {
  left: 52%;
  width: 49%;
}

/* End column layouts */

/* Begin upload-modal */

.upload-modal.ui-dialog {
  padding: 0px;
  border: 1px solid #4B4B4C;
}

.upload-modal .ui-widget-header {
  border: none;
  border-bottom: 1px solid #C4C4C4;
}

.upload-modal .ui-dialog-titlebar,
.upload-modal.ui-widget-content {
  background: -webkit-gradient(
      linear,
      left bottom,
      left top,
      color-stop(0.03, rgb(205,205,205)),
      color-stop(1, rgb(243,243,243))
  );
  background: -moz-linear-gradient(
      center bottom,
      rgb(205,205,205) 3%,
      rgb(243,243,243) 100%
  );
}

.upload-modal .ui-dialog-titlebar {
  padding: 20px;
}

.upload-modal.ui-dialog .ui-dialog-titlebar {
  padding: 10px 12px;
  color: #323232;
}

.upload-modal.ui-dialog .ui-dialog-content {
  padding: 20px;
  overflow: hidden;
}

.upload-modal.ui-corner-all, .upload-modal>div.ui-corner-all {
  border-radius: 0px;
  -moz-border-radius: 0px;
}

.upload-modal > div {
  background: none;
}

.upload-modal, .upload-modal.ui-widget {
  font-size: 12px;
}

.upload-modal input { 
  margin-top: 10px;
  padding: 4px 2px;
}

.upload-modal .ui-dialog-buttonpane {
  border: none;
}

.upload-modal button.ui-button {
  border-color: #AAAAAA;
}

.upload-modal button.ui-state-hover {
  border-color: #878787;
  -webkit-box-shadow: #ACACAC 0px 0px 6px;
  -moz-box-shadow: #ACACAC 0px 0px 6px;
  box-shadow: #ACACAC 0px 0px 6px;
}

.upload-modal #payload-filename {
  display: block;
  padding: 6px 0px;
