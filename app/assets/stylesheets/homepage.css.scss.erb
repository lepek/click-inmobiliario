.banner{
  background: #fff url(<%=asset_path 'house.jpg' %>) no-repeat scroll right 0;
  height:309px;
}

.banner h3{
  font: normal 28px Constantia;
  color: #737272;
  padding: 54px 0 0 58px;
}
.banner p{
  font: normal 14px Constantia;
  color: #737272;
  width: 397px;
  padding: 27px 0 0 58px;
  line-height: 16px;
}

.search {
    width: 180px;
    float:left;
}

.search label {
  float: none;
  margin-left: 0;
}

.search .input {
  margin-left: 0;
}

.search input[type="text"], .search select {
  width: 160px;  
}

.search .actions {
  padding: 17px 20px 18px;
  width: 130px;
}
